{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "ssl/**/*",
        "watchAssets": true
      },
      {
        "include": "files/**/*",
        "watchAssets": true
      },
      {
        "include": "static/**/*",
        "watchAssets": true
      },
      {
        "include": "views/**/*",
        "watchAssets": true
      }
    ]
  }
}